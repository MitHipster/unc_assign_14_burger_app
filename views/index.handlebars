<h1>Burgers</h1>
<h2>Not Eaten</h2>
<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        <p><span>{{~id}} </span>{{this.burger_name~}}</p>
        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Devour It</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>
<h2>Eaten</h2>
<ul>
  {{#each burgers}}
    {{#if this.devoured}}
    <li>
      <p><span>{{~id}} </span>{{this.burger_name~}}</p>
      <form action="/{{this.id}}?_method=DELETE" method="POST">
        <button type="submit">Delete It</button>
      </form>
    </li>
    {{/if}}
  {{/each}}
</ul>
<h2>Add a Burger</h2>
<form action="/" method="POST">
  <div>
    <label for="burger-name">Burger Name:</label>
    <input type="text" id="burger-name" name="burger_name" maxlength="50">
  </div>
  <button type="submit">Add Burger</button>
</form>
